{
  // not use prettier if any
  "prettier.enable": false,
  "typescript.experimental.useTsgo": true,
  // Eslint
  "eslint.quiet": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "editor.rulers": [ 100 ],
  "errorLens.enabledDiagnosticLevels": [ "warning", "error" ],
  "errorLens.excludeBySource": [
    "cSpell",
    "eslint"
  ],
  "eslint.rules.customizations": [
    {
      "rule": "style/*",
      "severity": "off"
    },
    {
      "rule": "format/*",
      "severity": "off"
    },
    {
      "rule": "*-indent",
      "severity": "off"
    },
    {
      "rule": "*-spacing",
      "severity": "off"
    },
    {
      "rule": "*-spaces",
      "severity": "off"
    },
    {
      "rule": "*-order",
      "severity": "off"
    },
    {
      "rule": "*-dangle",
      "severity": "off"
    },
    {
      "rule": "*-newline",
      "severity": "off"
    },
    {
      "rule": "*quotes",
      "severity": "off"
    },
    {
      "rule": "*semi",
      "severity": "off"
    }
  ],
  "search.exclude": {
    "**/*.snap": true,
    "**/*.svg": true,
    "**/.git": true,
    "**/.github": false,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/assets": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/public": true,
    "**/temp": true,
    "**/yarn.lock": true,
    "**/Cargo.lock": true,
    "**/CHANGELOG*": true,
    "**/LICENSE*": true,
    "components.json": true,
    "**/.gitignore": true,
    "next-env.d.ts": true,
    "pnpm-workspace.yaml": true,
    "README.md": true,
    "tsconfig.json": true,
    "tsconfig.tsbuildinfo": true
  },
}
