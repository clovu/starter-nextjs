{
  "name": "tarter-nextjs",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "A stubbornly opinionated starter template for NextJS projects.",
  "author": "Clover You <hi@clovu.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clovu/starter-nextjs.git"
  },
  "homepage": "https://github.com/clovu/starter-nextjs#readme",
  "scripts": {
