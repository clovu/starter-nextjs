    "next": "16.1.0",
    "next-intl": "^4.6.1",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "shadcn": "^3.6.2",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.2.15",
    "@iconify/tailwind4": "^1.2.0",
    "@tailwindcss/postcss": "^4.1.18",
